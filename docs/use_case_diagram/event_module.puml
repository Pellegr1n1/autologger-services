@startuml vehicle_service_use_case

left to right direction

skinparam {
    usecaseFontSize 12
    usecaseBackgroundColor #FFFFFF
    usecaseBorderColor #34495E
    actorBackgroundColor #FFFFFF
    actorBorderColor #2C3E50
    rectangleBackgroundColor #F8F9FA
    rectangleBorderColor #BDC3C7
}

actor "Usuário" as User
actor "Sistema Blockchain\n(Hyperledger Besu)" as Blockchain #ECF0F1

rectangle "Sistema de Registro de Serviços Veiculares" {
    
    (Registrar Serviço Veicular) as UC_Main
    (Autenticar no Sistema) as UC_Auth
    (Anexar Comprovantes) as UC_Attach
    (Consultar Histórico\nde Serviços) as UC_History
    (Verificar Integridade\ndo Registro) as UC_Verify
    
}

' Relacionamentos com atores
User --> UC_Main
User --> UC_History
User --> UC_Verify

' Blockchain como sistema externo
UC_Main --> Blockchain
UC_Verify --> Blockchain 

' Relacionamentos entre casos de uso
UC_Main ..> UC_Auth : <<include>>
UC_Main ..> UC_Attach : <<extend>>


@enduml